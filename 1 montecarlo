import java.util.Random;

public class MonteCarloPi {
    public static void main(String[] args) {
        int ngesamt = 1000000; // Gesamtzahl der Versuche
        int ninnen = 0; // Anzahl der Punkte im Einheitskreis

        Random rand = new Random();

        for (int i = 0; i < ngesamt; i++) {
            // Zufallszahlen im Intervall (-1,1) generieren
            double x = rand.nextDouble() * 2 - 1;
            double y = rand.nextDouble() * 2 - 1;

            // Überprüfen, ob die Zahlen im Einheitskreis liegen
            if (x*x + y*y < 1) {
                ninnen++;
            }
        }

        // Berechnung von Pi approximiert
        double piApprox = 4.0 * ninnen / ngesamt;

        // Ausgabe der Näherung von Pi
        System.out.println("Approximation von Pi: " + piApprox);
    }
}
